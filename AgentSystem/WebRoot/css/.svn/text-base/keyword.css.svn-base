.container{height:auto;position: relative;}
.container a{color:#000;}
.container a:hover{color:red;}
.searchuserdiv{text-align:left;padding-left:20px;}
.searchresult{position: absolute;left:80px;background: #fff;
	display:none;
	border:1px solid #ccc;
	padding:10px;
	box-shadow: 0 1px 0 #FFF;
	filter:progid:DXImageTransform.Microsoft.Shadow(color=#909090,direction=120,strength=4);/*ie*/
	-moz-box-shadow: 2px 2px 10px #909090;/*firefox*/
	-webkit-box-shadow: 2px 2px 10px #909090;/*safari»òchrome*/
	box-shadow:2px 2px 10px #909090;/*opera»òie9*/
}
.searchresult a{cursor: pointer;}
.searchresult li{float: left;width:150px; 
background: url("/imgs/content_bg_slice-2e234d4b4095b97a7f901ddc3194d517.png") repeat-x scroll 0 0 #D2D1D0;
height:60px; margin:5px;padding:5px; overflow: hidden;border:1px solid #ccc;}
